@model IEnumerable<course.Models.ChatParticipant>
@using course.Models

@{
    ViewData["Title"] = "Все участники чатов";
    var chatNames = ViewData["ChatNames"] as Dictionary<int, string>;
    var userNames = ViewData["UserNames"] as Dictionary<int, string>;
}

<h1>Все участники чатов</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить участника</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Чат
            </th>
            <th>
                Участник
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoinDate)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (chatNames != null && chatNames.ContainsKey(item.ChatId))
                    {
                        <a asp-controller="Chats" asp-action="Details" asp-route-id="@item.ChatId">@chatNames[item.ChatId]</a>
                    }
                    else
                    {
                        <span>Неизвестный чат (ID: @item.ChatId)</span>
                    }
                </td>
                <td>
                    @if (userNames != null && userNames.ContainsKey(item.UserId))
                    {
                        <a asp-controller="Users" asp-action="Details" asp-route-id="@item.UserId">@userNames[item.UserId]</a>
                    }
                    else
                    {
                        <span>Неизвестный пользователь (ID: @item.UserId)</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoinDate)
                </td>
                <td>
                    @* Для Edit и Delete нам нужны оба компонента составного ключа *@
                    <a asp-action="Edit" asp-route-chatId="@item.ChatId" asp-route-userId="@item.UserId" class="btn btn-sm btn-warning">Редактировать</a> |
                    <a asp-action="Details" asp-route-chatId="@item.ChatId" asp-route-userId="@item.UserId" class="btn btn-sm btn-info">Детали</a> |
                    <form asp-action="Delete" asp-controller="ChatParticipants" method="post" style="display:inline;">
                        <input type="hidden" name="chatId" value="@item.ChatId" />
                        <input type="hidden" name="userId" value="@item.UserId" />
                        <button type="submit" class="btn btn-sm btn-danger ms-2">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
