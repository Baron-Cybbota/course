@model ErrorViewModel
@{
    ViewData["Title"] = "Упс! Ошибка"; // More friendly title
}

<div class="container text-center py-5">
    <div class="hero-content"> @* Re-using hero-content for central alignment and padding *@
        <h1 class="hero-title text-danger mb-3">Упс! Что-то пошло не так.</h1> @* Larger, more prominent error message *@
        <h2 class="hero-subtitle text-muted mb-4">
            При обработке вашего запроса произошла ошибка. Мы уже работаем над этим!
        </h2>

        @if (Model.ShowRequestId)
        {
            <div class="card p-3 mx-auto mb-4" style="max-width: 400px; background-color: var(--secondary-dark); color: var(--text-light);">
                <p class="mb-0">
                    <strong>ID запроса:</strong> <code>@Model.RequestId</code>
                </p>
            </div>
        }

        <div class="mt-5">
            <a href="/" class="btn btn-gold btn-lg">Вернуться на главную</a> @* Use your custom styled button *@
        </div>
    </div>
</div>