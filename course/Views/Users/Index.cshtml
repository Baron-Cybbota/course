@model IEnumerable<course.Models.User>

@{
    ViewData["Title"] = "Список пользователей";
}

<h1>Список пользователей</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать нового пользователя</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlockStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BlockStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Действия пользователя">
                        <a asp-action="Edit" asp-route-id="@item.IdUser" class="btn btn-sm btn-warning" title="Редактировать">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdUser" class="btn btn-sm btn-info ms-1" title="Детали">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdUser" class="btn btn-sm btn-danger ms-1" title="Удалить">
                            <i class="bi bi-trash"></i>
                        </a>
                        <a asp-action="ManageAdministratorStatus" asp-route-id="@item.IdUser" class="btn btn-sm btn-primary ms-1" title="Управление админ. статусом">
                            <i class="bi bi-person-fill-gear"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>