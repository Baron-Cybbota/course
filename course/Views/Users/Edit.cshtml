@model course.Models.User

@{
    ViewData["Title"] = "Редактировать пользователя: " + Model.Login;
}

<h1>Редактировать пользователя</h1>

<h4>@Model.Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RegistrationDate" /> @* Дата регистрации не должна меняться *@
            <input type="hidden" asp-for="PasswordHash" /> @* Пароль не редактируется напрямую через эту форму *@
            
            <div class="form-group mb-3">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="BlockStatus" />
                <label class="form-check-label" asp-for="BlockStatus"></label>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" type="number" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
