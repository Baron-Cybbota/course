@model course.Models.BlacklistEntry

@{
    ViewData["Title"] = "Удалить запись из черного списка";
}

<h1>Удалить запись из черного списка</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Запись в черном списке</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Модератор
        </dt>
        <dd class="col-sm-10">
            @ViewData["ModeratorName"]
        </dd>
        <dt class="col-sm-2">
            Заблокированный пользователь
        </dt>
        <dd class="col-sm-10">
            @ViewData["UserName"]
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BlockDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BlockDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BlockDuration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BlockDuration)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>