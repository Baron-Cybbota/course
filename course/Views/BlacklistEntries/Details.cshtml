@model course.Models.BlacklistEntry

@{
    ViewData["Title"] = "Детали блокировки";
}

<h1>Детали блокировки</h1>

<div>
    <h4>Запись в черном списке</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Модератор
        </dt>
        <dd class="col-sm-10">
            @ViewData["ModeratorName"]
        </dd>
        <dt class="col-sm-2">
            Заблокированный пользователь
        </dt>
        <dd class="col-sm-10">
            @ViewData["UserName"]
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BlockDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BlockDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BlockDuration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BlockDuration)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdBlacklist">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>