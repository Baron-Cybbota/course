@model course.Models.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Изменить пароль";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg p-4">
                <h1 class="card-title text-center mb-4">Изменить пароль</h1>
                <hr />
                <form asp-action="ChangePassword">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="CurrentPassword" class="form-control" placeholder="Текущий пароль" />
                        <label asp-for="CurrentPassword"></label>
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="NewPassword" class="form-control" placeholder="Новый пароль" />
                        <label asp-for="NewPassword"></label>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Подтвердите новый пароль" />
                        <label asp-for="ConfirmNewPassword"></label>
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Изменить пароль</button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
